(ns test7.ios.scenes.root
  (:require [clojure.string :refer [blank?]]
            [reagent.core :as r]
            [re-frame.core :refer [subscribe dispatch dispatch-sync]]
            [test7.shared.ui :as ui]
            [test7.shared.scenes.about :refer [about-scene]]
            [test7.shared.scenes.main :refer [main-scene]]
            [test7.shared.scenes.test :refer [test-scene]]
            [test7.ios.ui :as ios-ui]
            [test7.ios.styles :as s]))

(def cloud-icon
  "data:image/png;base64,")

(def info-icon
  "data:image/png;base64,")

(defn city-click [name]
  (ios-ui/show-action-sheet {:options                ["Delete" "Cancel"]
                             :cancelButtonIndex      1
                             :destructiveButtonIndex 0}
                            (fn [index]
                              (if (= index 0)
                                (dispatch [:delete-city name])))))

(def main-scene-comp
    [main-scene {:style           (get-in s/styles [:scenes :main])
                   :city-wrapper-fn (fn [{city-name :name :as city} component]
                                      (let [media-url (-> (get-in city [:bing-image :MediaUrl]) (str))]
                                        (when-not (blank? media-url)
                                          [ui/touchable {:on-long-press (fn [_] (city-click city-name))}
                                           [ui/image {:style  (get-in s/styles [:scenes :main :city-card :card])
                                                      :source {:uri media-url}}
                                            [ui/view {:style (get-in s/styles [:scenes :main :city-card :view])}
                                             component]]])))}]
    )

(defn root-scene [{navigator :navigator}]
  (let [tab (subscribe [:get-shared-tab])]
    [ios-ui/tab-bar
     [ios-ui/tab-bar-item {:icon     {:uri cloud-icon :scale 4}
                           :selected (= @tab "main")
                           :on-press #(dispatch [:set-shared-tab "main"])
                           :title    "Weather"}

    [ui/view {:style {:height 800}}
    [ui/text {:style {:margin-top 25}
        :on-press (fn [_]
        (ios-ui/show-dialog {:text     "Please, input city's name"
        :callback (fn [city]
            (dispatch [:load-weather city]))}))
      }
      "click update list"]
      [main-scene {:style           (get-in s/styles [:scenes :main])
                   :city-wrapper-fn (fn [{city-name :name :as city} component]
                                      (let [media-url (-> (get-in city [:bing-image :MediaUrl]) (str))]
                                        (when-not (blank? media-url)
                                          [ui/touchable {:on-long-press (fn [_] (city-click city-name))}
                                           [ui/image {:style  (get-in s/styles [:scenes :main :city-card :card])
                                                      :source {:uri media-url}}
                                            [ui/view {:style (get-in s/styles [:scenes :main :city-card :view])}
                                             component]]])))}]
                                             ]
                                             ]

     [ios-ui/tab-bar-item {:icon     {:uri info-icon :scale 5}
                           :selected (= @tab "about")
                           :on-press #(dispatch [:set-shared-tab "about"])
                           :title    "About"}
      [about-scene {:style               (get-in s/styles [:scenes :about])
                    :github-button-fn    (fn [link]
                                           [ios-ui/button {:on-press #(.openURL ui/linking link)}
                                            "GitHub"])
                    :changelog-button-fn (fn [link]
                                           [ios-ui/button {:on-press #(.openURL ui/linking link)}
                                            "Changelog"])}]]

     [ios-ui/tab-bar-item {:icon     {:uri info-icon :scale 5}
                           :selected (= @tab "test")
                           :on-press #(dispatch [:set-shared-tab "test"])
                           :title    "Test"}
      [test-scene {:style               (get-in s/styles [:scenes :test])
                    :github-button-fn    (fn [link]
                                           [ios-ui/button {:on-press #(.openURL ui/linking link)}
                                            "GitHub"])
                    :changelog-button-fn (fn [link]
                                           [ios-ui/button {:on-press #(.openURL ui/linking link)}
                                            "Changelog"])}]]

                    ]))
